
<%= form_with model: @article do |f| %>
<p>
    <% if @article.errors.any? %>
    <ul>
        <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
</p>

<div class="form-group">
    <%= f.label :title %><br/>
    <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.label :content %><br/>
    <%= f.text_area :body, cols: 30, rows: 10, class: "form-control"  %>
</div>

  <div class="field form-group">
    <%= f.number_field :user_id, id: :article_user_id, class: "form-control", value: current_user.id, type: :hidden %>
  </div>
<p>
    <%= f.submit class: "btn btn-success" %>
</p>

<% end %>
