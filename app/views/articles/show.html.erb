
<h1 class="text-center m-5">
    <%= @article.name %>
</h1>

<p class="text-center">
    <%= @article.body %>
</p>


<div class="col text-center">
    <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-warning ml-auto" if current_user.id == @article.user.id %> 
</div>

<%= render 'comments/index', comments: @comments %>