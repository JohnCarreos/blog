
<h1>TASKS</h1>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Body</th>
            <th>Date</th>
        <tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= task.name %></td>
            <td><%= task.body %></td>
            <td><%= task.task_date %></td>
            <td><%= link_to "Edit", edit_category_task_path(@category.id, task.id)%></td>
            <td><%= link_to "Show", category_task_path(@category.id, task.id)%></td>
            <td><%= link_to "Delete", category_task_path(@category.id, task.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
        <tr>
        <% end %>
    <tbody>
</table>
<%= link_to 'Tasks Today', show_tasks_today_path(@category) %>
<%= link_to 'Add Task', new_category_task_path(@category) %>
<br/>
<%= link_to "Logout", destroy_user_session_path, method: :delete %>



