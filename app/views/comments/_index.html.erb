<h3 class="text-center m-3 mt-5">Comments</h3>


<div class="row justify-content-center">
    <div class="col-auto">
      <table class="table ">
        <tbody>
            <% @comments.each do |comment| %>
            <tr>
                <td><%= comment.user.name %></td>
                <td><%= comment.body %></td>
                <td><%= link_to "Edit", edit_article_comment_path(@article.id, comment.id) if current_user.id == comment.user_id %></td>
                <td><%= link_to "Delete", article_comment_path(@article.id, comment.id), method: :delete, data: {confirm: "Are you sure?"} if current_user.id == comment.user_id  %></td>
            <tr>
            <% end %>
        <tbody>
      </table>
    </div>
  </div>
<div class="col text-center">
    <%= link_to 'Add Comment', new_article_comment_path(@article), class: "btn btn-warning ml-auto"  if current_user%>
</div>

<br/>
